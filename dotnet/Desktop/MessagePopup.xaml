<Window x:Class="PurviewAPIExp.MessagePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Height="280" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TitleText" FontWeight="Bold" FontSize="16" Grid.Row="0" Margin="0,0,0,10"/>
        <TextBlock x:Name="MessageText" TextWrapping="Wrap" FontSize="16" Grid.Row="1"/>
        <Button Content="OK" Width="80" Height="30" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0" Click="OkButton_Click"/>
    </Grid>
</Window>